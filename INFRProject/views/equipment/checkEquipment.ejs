<%- include('../Partials/header') %>
<h1><%= title %></h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Serial Number</th>
      <th>Purchase Date</th>
      <th>Status</th>
      <th>Location</th>
      <th>Added By</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% equipment.forEach(eq => { %>
      <tr>
        <td><%= eq.name %></td>
        <td><%= eq.category %></td>
        <td><%= eq.serialNumber || 'N/A' %></td>
        <td><%= eq.purchaseDate ? eq.purchaseDate.toDateString() : 'N/A' %></td>
        <td><%= eq.status %></td>
        <td><%= eq.locationType %></td>
        <td><%= eq.addedBy || 'N/A' %></td>
        <td><%= eq.notes || 'N/A' %></td>
        <td>
          <a href="/equipment/update/<%= eq._id %>" class="btn btn-warning btn-sm">Update</a>
          <a href="/equipment/history/<%= eq._id %>" class="btn btn-info btn-sm">View History</a>
          <form action="/equipment/delete/<%= eq._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this equipment?');">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<a href="/" class="btn btn-secondary">Back to Home</a>
<%- include('../Partials/footer') %>
