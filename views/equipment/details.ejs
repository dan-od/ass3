<%- include('../Partials/header') %>

<main class="container mt-4">
    <h1>Equipment Details</h1>
    <p><strong>Name:</strong> <%= equipment.name %></p>
    <p><strong>Category:</strong> <%= equipment.category %></p>
    <p><strong>Status:</strong> <%= equipment.status %></p>

    <h3>Action History</h3>
    <% if (equipment.history && equipment.history.length) { %>
        <ul>
        <% equipment.history.forEach((entry) => { %>
            <li><%= entry.action %> on <%= entry.date %> by <%= entry.performedBy %> - Notes: <%= entry.notes %></li>
        <% }); %>
        </ul>
    <% } else { %>
        <p>No action history available.</p>
    <% } %>

    <a href="/equipment" class="btn btn-secondary">Back to Equipment List</a>
</main>

<%- include('../Partials/footer') %>
