<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css"> <!-- Optional: Your CSS -->
</head>
<body>
  <h1>Equipment Inventory</h1>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Serial Number</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (equipment.length > 0) { %>
        <% equipment.forEach(item => { %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.category %></td>
            <td><%= item.serialNumber %></td>
            <td><%= item.status %></td>
            <td>
              <a href="/equipment/details/<%= item._id %>">Details</a>
              <% if (user.role === 'Admin') { %>
                | <a href="/equipment/update/<%= item._id %>">Update</a>
                | <form action="/equipment/delete/<%= item._id %>" method="POST" style="display:inline;">
                  <button type="submit">Delete</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <td colspan="5">No equipment found.</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</body>
</html>
